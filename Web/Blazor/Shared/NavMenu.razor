<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href=""><img src="/Img/logo.png" width="50px" height="50px" />Super Burgers</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">

        <RadzenPanelMenu>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                    <span class="oi oi-eye" aria-hidden="true"></span> Vista Inicio
                </NavLink>
            </div>
            <AuthorizeView Roles="Administrador, Usuario">
                <Authorized>
                    <RadzenPanelMenuItem Text="Usuario" Path="Usuarios" Icon="account_box" />
                </Authorized>
            </AuthorizeView>


            <AuthorizeView Roles="Administrador, Usuario">
                <Authorized>
                    <RadzenPanelMenuItem Text="Clientes" Path="Clientes" Icon="face" />
                </Authorized>
            </AuthorizeView>

            <AuthorizeView Roles="Administrador, Usuario">
                <Authorized>
                    <RadzenPanelMenuItem Text="Productos" Icon="dashboard">
                        <RadzenPanelMenuItem Text="Alimentos" Path="Productos" Icon="donut_small"></RadzenPanelMenuItem>
                        <RadzenPanelMenuItem Text="Bebidas" Path="Bebidas" Icon="bolt"></RadzenPanelMenuItem>
                    </RadzenPanelMenuItem>
                </Authorized>
            </AuthorizeView>

            <AuthorizeView Roles="Administrador, Usuario">
                <Authorized>
                    <RadzenPanelMenuItem Text="Factura" Icon="credit_card">
                        <RadzenPanelMenuItem Text="Nueva" Path="NuevaFactura" Icon="add_shopping_cart"></RadzenPanelMenuItem>
                        <RadzenPanelMenuItem Text="Realizadas" Path="Listado" Icon="assignment_turned_in"></RadzenPanelMenuItem>
                    </RadzenPanelMenuItem>
                </Authorized>
            </AuthorizeView>
            
        </RadzenPanelMenu>

    </nav>
</div>


@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
